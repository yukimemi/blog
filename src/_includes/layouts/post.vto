---
layout: layouts/base.vto
---
<article>
  <header class="post-header">
    <h1>{{ title }}</h1>
    <time datetime="{{ date |> date('DATETIME') }}">{{ date |> date('HUMAN_DATE') }}</time>
    <div class="tags">
      {{ for tag of tags }}
        <span class="tag">#{{ tag }}</span>
      {{ /for }}
    </div>
  </header>

  <div class="post-content">
    {{ content }}
  </div>
</article>
